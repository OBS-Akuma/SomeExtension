{
  "manifest_version": 3,
  "name": "Auto Script Injector",
  "version": "1.0",
  "description": "Automatically injects a script from /scripts/ into the current page.",
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],  // Inject on all URLs
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.png"
  }
}
